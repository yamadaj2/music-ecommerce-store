<%= form_with model: @product, local: true do |f| %>
  <div>
    <%= f.label 'name' %>
  </div>
  <div>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label 'category' %>
  </div>
  <div>
    <%= f.select :category, category_select_options %>
  </div>
  <div>
    <%= f.label 'description' %>
  </div>
  <div>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.submit 'Save' %>
    <%= link_to 'Back', products_path %>
  </div>
<% end %>
